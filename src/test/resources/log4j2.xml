<?xml version="1.0" encoding="UTF-8"?>
<configuration name="defaultConfiguration" status="debug"
               strict="true" monitorInterval="5">
    <properties>
        <property name="patternlayout">%d{ISO8601} [%t] %-5level %logger{36} - %msg%n%throwable{full}</property>

    </properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <layout type="PatternLayout" pattern="${patternlayout}"/>
        </Console>

    </appenders>
    <loggers>
        <root level="error">
            <appender-ref ref="Console"/>
        </root>
        <logger name="user" level="debug">
        </logger>
    </loggers>
</configuration>